{
  "extends": ["airbnb", "react-app"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "browser": true,
    "jest": true,
  },
  "rules": {
    "complexity": ["warn", 10],
    "no-underscore-dangle": ["error"],
    "max-depth": ["warn", 3],
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }]
  }
}
